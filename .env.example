###############################
# Environnement
###############################
# ENVIRONMENT=dev  # (dev|prod)
# DEBUG=true

###############################
# Base de données
###############################
# Dev DB (compose profile dev)
DATABASE_URL=postgresql+psycopg2://postgres:postgres@db-dev:5432/inventory_dev
# Prod/staging DB (compose profile prod, port interne 5432, exposé 5433 sur l’hôte)
# DATABASE_URL=postgresql+psycopg2://postgres:postgres@db-prod:5432/inventory_prod
# Exemple DB managée (recommandé en prod) :
# DATABASE_URL=postgresql+psycopg2://user:password@host:5432/inventory

###############################
# Auth / JWT / LDAP
###############################
JWT_SECRET_KEY=changeme
# JWT_ALGORITHM=HS256
# JWT_EXPIRATION_MINUTES=720
LDAP_SERVER=ldap://ldap:389
LDAP_USER_DN_TEMPLATE=uid={username},ou=people,dc=example,dc=org
LDAP_SEARCH_BASE=ou=people,dc=example,dc=org
LDAP_SEARCH_FILTER=(uid={username})

###############################
# Mode dev sans auth
###############################
AUTH_DISABLED=true
DEV_USER_ID=1
DEV_ROLES=["admin"]

###############################
# Frontend (Vite)
###############################
# URL publique de l'API (inclure http/https et éventuel préfixe /api)
